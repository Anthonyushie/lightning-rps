{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"],
        "maxDuration": 30
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"  // Removed `../` (Vercel paths are relative to root)
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server"  // Changed from `/server/index.ts`
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1",
      "continue": true  // Allows fallthrough if file doesnâ€™t exist
    }
  ]
}